<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stepAppointment3"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:layout_height="0dp"
    app:cardBackgroundColor="@color/whiteTransparent"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    android:layout_weight="2">

    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        android:background="#FFFFFF"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Resumen de la Cita "
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"></TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Descripcion: "
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"></TextView>

            <TextView
                tools:text="Descripcion Example"
                android:id="@+id/confirmDescription"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Especialidad: "
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"></TextView>

            <TextView
                tools:text="Oftalmologo"
                android:id="@+id/confirmSpeciality"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Tipo de Cita: "
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"></TextView>

            <TextView
                tools:text="Consulta"
                android:id="@+id/confirmType"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Medico: "
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"></TextView>

            <TextView
                tools:text="Dr House. gregory"
                android:id="@+id/confirmDoctor"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Fecha para la cita: "
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:id="@+id/confirmDate"
                tools:text="2019-10-20"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Hora de la cita: "
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:id="@+id/confirmTime"
                tools:text="23:12"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>


        <Button
            android:layout_marginTop="8dp"
            android:id="@+id/confirmAppointment"
            android:drawableEnd="@drawable/ic_check"
            style="@style/MenuButton"
            android:text="Confirmar" />


    </LinearLayout>



</androidx.cardview.widget.CardView>